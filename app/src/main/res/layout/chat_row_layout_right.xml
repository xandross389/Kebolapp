<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewRight"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="16dp"
    app:cardUseCompatPadding="true"
    android:layout_gravity="right"
    cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtChatMessage"
            android:text="Hello world"
            android:textSize="18sp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<TextView
                android:id="@+id/txtMessageState"
                android:text="Queued|Sent|Error|Received"
                android:gravity="end"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/txtSentTime"
                android:layout_toStartOf="@+id/txtSentTime" />-->

            <TextView
                android:id="@+id/txtSentTime"
                android:text="7:45pm"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:textDirection="rtl"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>